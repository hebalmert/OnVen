@model OnVen.Web.Models.AddProductImageViewModel

@{
    ViewData["Title"] = "Add Image";
}

<br />

<div class="row">
    <div class="col-md-6">
        <div class="shadow  bg-white rounded">
            <div class="card">
                <div class="card-header"><h4>New Image</h4></div>
                <div class="card-body">
                    <form asp-action="AddImage" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="form-group">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-success btn-sm">
                                <i class="fa fa-backspace"></i>
                                Back
                            </a>

                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-save"></i>
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

