@model OnVen.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<br />

<div class="row">
    <div class="col-md-6">
        <div class="shadow  bg-white rounded">
            <div class="card">
                <div class="card-header"><h4>New Product</h4></div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <partial name="_Product" />

                        <div class="form-group">
                            <button type="button" class="btn btn-outline-success btn-sm" onclick="location.href = '@Url.Action("Index", new  {})'">
                                <i class="fa fa-backspace"></i>
                                Back
                            </button>

                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-save"></i>
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
