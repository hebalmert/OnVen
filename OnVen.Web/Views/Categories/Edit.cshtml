@model OnVen.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8">
        <div class="shadow  bg-white rounded">
            <div class="card">
                <div class="card-header"><h4>Category Edit</h4></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 m-2">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="CategoryId" />
                                <input type="hidden" asp-for="ImageId" />

                                <partial name="_Category" />

                                <br />

                                <div class="col-md-12">
                                    <button type="button" class="btn btn-outline-success btn-sm" onclick="location.href = '@Url.Action("Index", new  {})'">
                                        <i class="fa fa-backspace"></i>
                                        Back
                                    </button>

                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                        <i class="fa fa-save"></i>
                                        Save
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5 m-2">
                            <img src="@Model.ImageFullPath" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
